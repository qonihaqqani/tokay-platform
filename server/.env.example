# Server Configuration
NODE_ENV=development
PORT=5000
CLIENT_URL=http://localhost:3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=tokay_user
DB_PASSWORD=password
DB_NAME=tokay_platform

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_EXPIRE=7d

# Twilio Configuration (for SMS)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM="Tokay Resilience Platform" <noreply@tokay.com>

# Payment Gateway Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
FPX_MERCHANT_ID=your_fpx_merchant_id
TOUCHNGO_API_KEY=your_touchngo_api_key
GRABPAY_CLIENT_ID=your_grabpay_client_id
GRABPAY_CLIENT_SECRET=your_grabpay_client_secret

# External API Configuration
OPENWEATHER_API_KEY=your_openweather_api_key
MET_MALAYSIA_API_KEY=your_met_malaysia_api_key
DID_API_KEY=your_did_api_key

# Google Maps Configuration
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Security Configuration
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring Configuration
SENTRY_DSN=your_sentry_dsn
LOG_LEVEL=info

# AWS Configuration (for production)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=ap-southeast-1
AWS_S3_BUCKET=tokay-platform-uploads

# Compliance Configuration
PDPA_COMPLIANCE=true
DATA_RETENTION_DAYS=2555
AUDIT_LOG_ENABLED=true